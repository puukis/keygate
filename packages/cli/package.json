{
  "name": "@puukis/cli",
  "version": "0.1.1",
  "description": "Keygate global CLI with bundled web UI",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "bin": {
    "keygate": "dist/main.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "pnpm --filter @puukis/web build && tsc && node ./scripts/copyWebAssets.mjs"
  },
  "dependencies": {
    "@puukis/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
